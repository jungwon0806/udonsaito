<h1>UdonPost</h1>

<h2>新規udon</h2>

<%= form_for @udon do |f| %>
  <div class="abcd">
    <div class="udonstar_form">
    <h3>うどん投稿フォーム</h3>
    <%= f.text_field :name , placeholder: 'うどん名を入力', class:'name_field'%>
    
  
    <h4>総合評価</h4>
     <div class="post_form">
      <%= f.radio_button :overall, 5 ,id: 'star1'%>
      <label for="star1"><span class="text">最高</span>★</label>
  
      <%= f.radio_button :overall, 4 ,id: 'star2'%>
      <label for="star2"><span class="text">良い</span>★</label>
  
      <%= f.radio_button :overall, 3 ,id: 'star3'%>
      <label for="star3"><span class="text">普通</span>★</label>
  
      <%= f.radio_button :overall, 2 ,id: 'star4'%>
      <label for="star4"><span class="text">悪い</span>★</label>
  
      <%= f.radio_button :overall, 1 ,id: 'star5'%>
      <label for="star5"><span class="text">最悪</span>★</label>
   </div>
  
  <h4>うどんレベル</h4>
    <div class="post_form">
      <%= f.radio_button :level,  5 ,id: 'star6'%>
      <label for="star6"><span class="text">おいしい</span>★</label>
  
      <%= f.radio_button :level,  4 ,id: 'star7'%>
      <label for="star7"><span class="text">まあまあおいしい</span>★</label>
  
      <%= f.radio_button :level, 3 ,id: 'star8'%>
      <label for="star8"><span class="text">普通</span>★</label>
  
      <%= f.radio_button :level , 2 ,id: 'star9'%>
      <label for="star9"><span class="text">あまりおいしくない</span>★</label>
  
      <%= f.radio_button :level , 1 ,id: 'star10'%>
      <label for="star10"><span class="text">おいしくない</span>★</label>
   </div>
  
  
    </div>
    

  


<div class="udonstar_form">
  <div class="field1">
    <%= f.label :shop %>
    <%= f.text_field :shop, :size => 30 %>
  </div>


  <div class="field1">
    <%= f.label :place %>
    <%= f.text_field :place, :size => 30 %>
  </div>

    <div class="field1">
       <%= f.label :image %>
        <%= f.file_field :image %>
    </div>
 </div>
 </div>


  <%= f.submit "投稿する" %>
<% end %>


<%= link_to "一覧に戻る", udons_path %>